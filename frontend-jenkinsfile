@Library('pipeline-library@master') _
 
pipeline {
    agent any
    tools { nodejs "NodeJs10.0" }
    triggers {
        pollSCM '* * * * *'
    }
    stages {
        stage('Git Checkout') {
            steps {
            gitCheckout(
                branch: "master",
                url: "https://github.com/vigneshsweekaran/capstone-easyclaim-frontend.git",
                credential: "git_credential")
            }
        }
        stage('Build') {
            steps {
                sh 'npm install'
                sh 'ng build'
            }
        }
    }
    
}
